{
    "name": "php-tool-kit/fs",
    "description": "Ferramentas para manipulação de diretórios e arquivos.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Everton",
            "email": "your@email.here"
        }
    ],
    "require": {
        "php": ">=7.4.3"
    },
    "autoload": {
        "files": [
            "src/fs.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*",
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-html=coverage --whitelist=src --colors=auto --testdox --no-configuration tests",
        "format": "./vendor/bin/phpcbf -p --standard=PSR1,PSR12 src",
        "check": "./vendor/bin/phpcs -p --colors --standard=PSR1,PSR12 src"
    }
}
